<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título: Histórico -->
    <TextView
        android:id="@+id/tv_titulo_analisis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hist_rico"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- RecyclerView para mostrar el historial de rutinas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_historial_rutinas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Mostrar el total de rutinas -->
    <TextView
        android:id="@+id/tv_total_rutinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total de rutinas: 0"/>

</LinearLayout>
