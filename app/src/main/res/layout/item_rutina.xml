<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/bluelightsoft"
    android:layout_marginBottom="8dp">

    <!-- Título de la rutina -->
    <TextView
        android:id="@+id/tv_titulo_rutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Rutina 1" />

    <TextView
        android:id="@+id/tv_calorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Calorías quemadas: 0" />

    <TextView
        android:id="@+id/tv_distribucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distribución de ejercicios: 0" />

    <TextView
        android:id="@+id/tv_intensidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intensidad recomendada: Media" />

    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha: 2025-04-21"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
